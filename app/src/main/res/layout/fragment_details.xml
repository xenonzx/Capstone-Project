<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="@integer/details_frag_rates_weight">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                style="@style/RatesListHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/no_elevation"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

                <TextView
                    android:id="@+id/tv_bank_name"
                    style="@style/RatesListHeaderTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="@integer/header_title_weight" />

                <TextView
                    style="@style/RatesListHeaderTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="@integer/header_buy_weight"
                    android:gravity="center_horizontal"
                    android:text="@string/buy" />

                <TextView
                    style="@style/RatesListHeaderTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="@integer/header_sell_weight"
                    android:gravity="center_horizontal"
                    android:text="@string/sell" />
            </LinearLayout>

            <LinearLayout
                style="@style/RatesListItemLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/margin_medium"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

                <TextView

                    style="@style/RatesListItemDetail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="@integer/header_title_weight"
                    android:text="@string/us_dollar_to_egyptian_pound" />

                <TextView
                    android:id="@+id/tv_usd_buy_rate"
                    style="@style/RatesListItemDetail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="@integer/header_buy_weight"
                    android:gravity="center_horizontal"
                    tools:text="19.7569 EGP" />

                <TextView
                    android:id="@+id/tv_usd_sell_rate"
                    style="@style/RatesListItemDetail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="@integer/header_sell_weight"
                    android:gravity="center_horizontal"
                    tools:text="19.9062 EGP" />
            </LinearLayout>

            <LinearLayout
                style="@style/RatesListItemLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/margin_medium"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

                <TextView
                    style="@style/RatesListItemDetail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="@integer/header_title_weight"
                    android:text="@string/euro_to_egyptian_pound" />

                <TextView
                    android:id="@+id/tv_eur_buy_rate"
                    style="@style/RatesListItemDetail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="@integer/header_buy_weight"
                    android:gravity="center_horizontal"
                    tools:text="19.7569 EGP" />

                <TextView
                    android:id="@+id/tv_eur_sell_rate"
                    style="@style/RatesListItemDetail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="@integer/header_sell_weight"
                    android:gravity="center_horizontal"
                    tools:text="19.9062 EGP" />
            </LinearLayout>

            <LinearLayout
                style="@style/RatesListItemLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/margin_medium"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

                <TextView
                    style="@style/RatesListItemDetail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="@integer/header_title_weight"
                    android:text="@string/saudi_riyal_to_egyptian_pound" />

                <TextView
                    android:id="@+id/tv_sar_buy_rate"
                    style="@style/RatesListItemDetail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="@integer/header_buy_weight"
                    android:gravity="center_horizontal"
                    tools:text="19.7569 EGP" />

                <TextView
                    android:id="@+id/tv_sar_sell_rate"
                    style="@style/RatesListItemDetail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="@integer/header_sell_weight"
                    android:gravity="center_horizontal"
                    tools:text="19.9062 EGP" />
            </LinearLayout>

            <LinearLayout
                style="@style/RatesListItemLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/margin_medium"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

                <TextView
                    android:id="@+id/tv_item_title"
                    style="@style/RatesListItemDetail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="@integer/header_title_weight"
                    android:text="@string/british_pound_to_egyptian_pound" />

                <TextView
                    android:id="@+id/tv_gbp_buy_rate"
                    style="@style/RatesListItemDetail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="@integer/header_buy_weight"
                    android:gravity="center_horizontal"
                    tools:text="19.7569 EGP" />

                <TextView
                    android:id="@+id/tv_gbp_sell_rate"
                    style="@style/RatesListItemDetail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="@integer/header_sell_weight"
                    android:gravity="center_horizontal"
                    tools:text="19.9062 EGP" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>


    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="@integer/details_frag_map_weight" />

</LinearLayout>
